extends ./layout

block content
  .row
    #conversationCard
      .panel.panel-default
        .panel-heading.clearfix
          h3.panel-title.pull-left Conversation Details

      .table-responsive
        table.table.table-hover
          thead
            tr
              th Label
              th Value
          tbody
            tr
              td Calling Party
              td #{src}
            tr
              td Room
              td #{dst}
            tr
              td When
              td  #{timestamp}
            for data in collected_data
              tr
                td #{data.key}
                td #{data.v}

  .row
    #conversationCard
      .panel.panel-default
        .panel-heading.clearfix
          h3.panel-title.pull-left Transcript

      .table-responsive
        table.table.table-hover
          thead
            tr
              th Who
              th Said
          tbody
            for line in transcript
              tr
                td= line.split("|")[1]
                td= line.split("|")[2]
