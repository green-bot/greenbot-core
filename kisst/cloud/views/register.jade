doctype 5
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    link(rel='shortcut icon', href='/img/favicon.png')
    meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, user-scalable=no, minimal-ui')
    title KISST
    link(href='//cdnjs.cloudflare.com/ajax/libs/morris.js/0.5.1/morris.css', rel='stylesheet')
    link(href='//netdna.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css', rel='stylesheet')
    link(href='/css/bootstrap.min.css', rel='stylesheet')
    link(href='//cdnjs.cloudflare.com/ajax/libs/jqueryui/1.11.2/jquery-ui.css', rel='stylesheet')
    link(href='/css/bootcards-desktop.min.css', rel="stylesheet")
    link(href='/css/portal.css', rel='stylesheet')
    link(href='//fonts.googleapis.com/css?family=Lato&subset=latin,latin-ext', rel='stylesheet')

    // HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries
    //if lt IE 9
      script(src='https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js')
      script(src='https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js')
    script(src='/js/jquery-1.11.2.min.js')
    script(src='/js/bootstrap.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.11.2/jquery-ui.min.js')
    script(src='/js/bootcards.min.js')

block content
  .row
    .col-sm-4.col-sm-offset-4.bootcards-cards
        .panel.panel-default
          .panel-heading.clearfix
            a(href="/portal")
              img.frontpage-logo(src="/img/frog-front-page.png")
          .list-group
              form(method="POST", action="/register_request")
                .list-group-item
                  label.list-group-item-text
                    | To access your KISST service portal:
                    p
                    ol
                      li From the owner's cell phone, send a '/token' message to your KISST number.
                      li It will respond with a unique token that identifies you as the owner of the service.
                      li
                        | Please give us that token, and an email for your account, and press send. We will send you a confirmation
                        | email where you can set your password.
                .list-group-item
                  label Email
                  input(name="email")
                .list-group-item
                  label Password
                  input(name="password", type="password")
                .list-group-item
                  label Token
                  input(name="token")
                  input(href='#', data-pjax='#main', type="submit", value="Register")
